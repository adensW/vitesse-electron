{
  "name": "vitesse-electron",
  "private": true,
  "engines": {
    "node": ">=v16.13",
    "npm": ">=8.1"
  },
  "main": "packages/main/dist/index.cjs",
  "scripts": {
    "build": "pnpm run build:main && pnpm run build:preload && pnpm run build:renderer",
    "build:main": "cd ./packages/main && vite build",
    "build:preload": "cd ./packages/preload && vite build",
    "build:renderer": "cd ./packages/renderer && vite build",
    "compile": "cross-env MODE=production pnpm run build && electron-builder build --config .electron-builder.config.js --dir --config.asar=false",
    "test": "pnpm run test:main && pnpm run test:preload && pnpm run test:renderer && pnpm run test:e2e",
    "test:e2e": "pnpm run build && vitest run",
    "test:main": "vitest run -r packages/main --passWithNoTests",
    "test:preload": "vitest run -r packages/preload --passWithNoTests",
    "test:renderer": "vitest run -r packages/renderer --passWithNoTests",
    "watch": "node scripts/watch.js",
    "lint": "eslint . --ext js,ts,vue",
    "typecheck:main": "tsc --noEmit -p packages/main/tsconfig.json",
    "typecheck:preload": "tsc --noEmit -p packages/preload/tsconfig.json",
    "typecheck:renderer": "vue-tsc --noEmit -p packages/renderer/tsconfig.json",
    "typecheck": "pnpm run typecheck:main && pnpm run typecheck:preload && pnpm run typecheck:renderer"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.19.4",
    "@iconify-json/carbon": "^1.1.3",
    "@intlify/vite-plugin-vue-i18n": "^3.3.1",
    "@types/nprogress": "^0.2.0",
    "@typescript-eslint/eslint-plugin": "5.17.0",
    "@typescript-eslint/parser": "^5.17.0",
    "@unocss/reset": "^0.30.11",
    "@vitejs/plugin-vue": "2.3.1",
    "@vue/test-utils": "2.0.0-rc.18",
    "cross-env": "7.0.3",
    "electron": "18.0.1",
    "electron-builder": "23.0.3",
    "electron-devtools-installer": "3.2.0",
    "eslint": "8.12.0",
    "happy-dom": "2.55.0",
    "nano-staged": "0.6.0",
    "playwright": "1.20.2",
    "typescript": "4.6.3",
    "unocss": "^0.30.11",
    "unplugin-auto-import": "^0.6.9",
    "unplugin-icons": "^0.14.1",
    "unplugin-vue-components": "^0.18.5",
    "vite": "2.9.1",
    "vite-plugin-inspect": "^0.4.3",
    "vite-plugin-pages": "^0.22.0",
    "vite-plugin-vue-layouts": "^0.6.0",
    "vite-ssg": "^0.19.0",
    "vitest": "0.8.4",
    "vue-tsc": "0.33.9"
  },
  "dependencies": {
    "@vueuse/core": "^8.2.4",
    "@vueuse/head": "^0.7.5",
    "electron-updater": "5.0.0",
    "nprogress": "^0.2.0",
    "pinia": "^2.0.13",
    "vue": "3.2.31",
    "vue-demi": "^0.12.5",
    "vue-i18n": "^9.1.9",
    "vue-router": "^4.0.14"
  }
}
